<%- include('partials/header') -%>

<div class="max-w-3xl mx-auto px-6 py-10">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold text-slate-800">Welcome, <%= user.name %></h1>
    <a href="/logout" 
       class="inline-block px-4 py-2 bg-red-500 hover:bg-red-600 text-white text-sm font-semibold rounded-lg transition">
      Logout
    </a>
  </div>

  <div class="flex items-center gap-6 mb-6">
    <div class="w-24 h-24 rounded-full overflow-hidden border border-slate-300 bg-slate-100 flex-shrink-0">
      <img src="<%= user.picture %>" alt="Profile Picture" 
           class="w-full h-full object-cover"
           onerror="this.style.display='none'; this.insertAdjacentHTML('afterend', `<?= fallbackIcon ?>`)">
    </div>
    <div>
      <p class="text-xl font-medium text-slate-700"><%= user.name %></p>
      <p class="text-slate-500"><%= user.email %></p>
    </div>
  </div>

  <div class="bg-slate-100 p-4 rounded-lg text-slate-800 text-sm leading-relaxed shadow">
    <h2 class="font-semibold text-slate-700 mb-2">User Details</h2>
    <ul class="space-y-1">
      <li><strong>Nickname:</strong> <%= user.nickname %></li>
      <li><strong>Email Verified:</strong> <%= user.email_verified ? 'Yes' : 'No' %></li>
    </ul>
  </div>
</div>

